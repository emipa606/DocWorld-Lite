<Patch>
   <!--This file will contain all patches that replace/change item stuffability for Vanilla and Mods-->

   <!--==========
    VANILLA
    ==========-->

   <!--Butcher Table-->
   <Operation Class="PatchOperationConditional">
      <xpath>/Defs/ThingDef[defName = "TableButcher"]/stuffCategories/Stony</xpath>
      <nomatch Class="PatchOperationAdd">
         <xpath>/Defs/ThingDef[defName = "TableButcher"]/stuffCategories</xpath>
         <value>
            <li>Stony</li>
         </value>
      </nomatch>
   </Operation>

   <!--Tool Cabinet-->
   <Operation Class="PatchOperationConditional">
      <xpath>/Defs/ThingDef[defName="ToolCabinet"]/stuffCategories</xpath>
      <match Class="PatchOperationSequence">
         <success>Always</success>
         <operations>
            <li Class="PatchOperationReplace">
               <xpath>/Defs/ThingDef[defName = "ToolCabinet"]/stuffCategories</xpath>
               <value>
                  <stuffCategories>
                     <li>Metallic</li>
                     <li>Woody</li>
                     <li>Stony</li>
                  </stuffCategories>
               </value>
            </li>
            <li Class="PatchOperationReplace">
               <xpath>/Defs/ThingDef[defName = "ToolCabinet"]/costStuffCount</xpath>
               <value>
                  <costStuffCount>150</costStuffCount>
               </value>
            </li>
         </operations>
      </match>
      <nomatch Class="PatchOperationAdd">
         <xpath>/Defs/ThingDef[defName = "ToolCabinet"]</xpath>
         <value>
            <costStuffCount>150</costStuffCount>
            <stuffCategories>
               <li>Metallic</li>
               <li>Woody</li>
               <li>Stony</li>
            </stuffCategories>
         </value>
      </nomatch>
   </Operation>

   <Operation Class="PatchOperationReplace">
      <xpath>/Defs/ThingDef[defName = "ToolCabinet"]/costList/Steel</xpath>
      <value>
         <Steel>50</Steel>
      </value>
   </Operation>

   <!--Vents-->
   <Operation Class="PatchOperationConditional">
      <xpath>/Defs/ThingDef[defName = "Vent"]/costList</xpath>
      <match Class="PatchOperationReplace">
         <xpath>/Defs/ThingDef[defName = "Vent"]/costList</xpath>
         <value>
            <costStuffCount>30</costStuffCount>
            <stuffCategories>
               <li>Metallic</li>
               <li>Stony</li>
               <li>Woody</li>
            </stuffCategories>
         </value>
      </match>
   </Operation>
   
   <!--==========
    VGP Garden Gourmet
    ==========-->

   <!--Stuff items-->
   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>VGP Garden Gourmet</li>
      </mods>
      <match Class="PatchOperationSequence">
         <success>Always</success>
         <operations>
            <li Class="PatchOperationReplace">
               <xpath>/Defs/ThingDef[defName="HandCanningstove" or defName="Canningstove"]/costList</xpath>
               <value>
                  <costStuffCount>40</costStuffCount>
                  <stuffCategories>
                     <li>Metallic</li>
                     <li>Woody</li>
                     <li>Stony</li>
                  </stuffCategories>
               </value>
            </li>
            <li Class="PatchOperationReplace">
               <xpath>/Defs/ThingDef[defName="FueledCandyTable" or defName="CandyTable"]/costList</xpath>
               <value>
                  <costStuffCount>60</costStuffCount>
                  <stuffCategories>
                     <li>Metallic</li>
                     <li>Woody</li>
                     <li>Stony</li>
                  </stuffCategories>
               </value>
            </li>
         </operations>
      </match>
   </Operation>
   
    <!--==========
    Fish Industry
    ==========-->

   <!-- Stuff the pier-->
   <Operation Class="PatchOperationFindMod">
      <mods>
         <li>FishIndustry</li>
      </mods>
      <match Class="PatchOperationSequence">
         <success>Always</success>
         <operations>
            <li Class="PatchOperationReplace">
               <xpath>/Defs/ThingDef[defName="FishingPier"]/costList</xpath>
               <value>
                  <costStuffCount>200</costStuffCount>
                  <stuffCategories>
                     <li>Stony</li>
                     <li>Metallic</li>
                     <li>Woody</li>
                  </stuffCategories>
               </value>
            </li>
         </operations>
      </match>
   </Operation>

</Patch>